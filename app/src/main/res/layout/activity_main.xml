<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download_20180522131703"
    tools:context=".MainActivity">



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#7fcdecc8">
                <!--顶部星期栏-->
                    <TextView
                        android:layout_width="110px"
                        android:layout_height="match_parent"
                        android:id="@+id/t1"
                        android:gravity="center"
                        android:text="节/周"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/t2"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="周一"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/t3"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="周二"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/t4"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="周三"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/t5"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="周四"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/t6"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="周五"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/t7"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="周六"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/t8"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="周日"/>



            </LinearLayout>

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coursenumber"
                android:orientation="vertical"
                >



                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tue"
                    android:layout_weight="1"
                    android:layout_margin="1dp">
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/wed"
                    android:layout_weight="1"
                    android:layout_margin="1dp">
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/thu"
                    android:layout_weight="1"
                    android:layout_margin="1dp">
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/fri"
                    android:layout_weight="1"
                    android:layout_margin="1dp">
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/sat"
                    android:layout_weight="1"
                    android:layout_margin="1dp">
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/sun"
                    android:layout_weight="1"
                    android:layout_margin="1dp">
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        
    </FrameLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>